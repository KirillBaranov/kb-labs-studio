import React, { useState } from 'react';
import { Input, Button, Divider, Select, Spin, theme } from 'antd';
import { Send, FileText, Bot } from 'lucide-react';
import { KBPageContainer, KBPageHeader } from '@kb-labs/studio-ui-react';
import { useAgentsList, useAgentRun } from '@kb-labs/studio-data-client';
import { useDataSources } from '../../../providers/data-sources-provider';
import type { RunAgentResponse } from '@kb-labs/agent-contracts';
import { MarkdownViewer } from '../../../components/markdown/markdown-viewer';
import { UIBox, UICard, UITag, UIText } from '@kb-labs/studio-ui-kit';
import './assistant-page.css';

const { useToken } = theme;

interface Message {
  id: string;
  role: 'user' | 'assistant';
  content: string;
  sources?: Array<{
    file: string;
    lines: [number, number];
    snippet: string;
  }>;
  stats?: {
    steps: number;
    totalTokens: number;
    durationMs: number;
    toolsUsed?: string[];
  };
  timestamp: Date;
}

export function AssistantPage() {
  const { token } = useToken();
  const dataSources = useDataSources();
  console.log('[AssistantPage] dataSources:', dataSources);
  console.log('[AssistantPage] agentSource:', dataSources.agent);

  const { data: agentsData, isLoading: agentsLoading } = useAgentsList(dataSources.agent);
  const agentMutation = useAgentRun(dataSources.agent);

  const [selectedAgentId, setSelectedAgentId] = useState<string>('mind-assistant');
  const [messages, setMessages] = useState<Message[]>([]);
  const [input, setInput] = useState('');

  const handleSend = async () => {
    if (!input.trim() || !selectedAgentId) {return;}

    // Add user message
    const userMessage: Message = {
      id: Date.now().toString(),
      role: 'user',
      content: input,
      timestamp: new Date(),
    };

    setMessages((prev) => [...prev, userMessage]);
    const userInput = input;
    setInput('');

    // Execute agent
    try {
      console.log('[AssistantPage] Executing agent:', { agentId: selectedAgentId, task: userInput });
      const result = await agentMutation.mutateAsync({
        agentId: selectedAgentId,
        task: userInput,
      });
      console.log('[AssistantPage] Agent result:', result);

      // Add assistant response
      if (result.success) {
        const successResult = result as RunAgentResponse;
        const assistantMessage: Message = {
          id: (Date.now() + 1).toString(),
          role: 'assistant',
          content: successResult.result,
          stats: successResult.stats,
          timestamp: new Date(),
        };
        setMessages((prev) => [...prev, assistantMessage]);
      } else {
        // Error response
        const errorMessage: Message = {
          id: (Date.now() + 1).toString(),
          role: 'assistant',
          content: `Error: ${result.error.message}`,
          timestamp: new Date(),
        };
        setMessages((prev) => [...prev, errorMessage]);
      }
    } catch (error) {
      const errorMessage: Message = {
        id: (Date.now() + 1).toString(),
        role: 'assistant',
        content: `Failed to execute agent: ${error instanceof Error ? error.message : String(error)}`,
        timestamp: new Date(),
      };
      setMessages((prev) => [...prev, errorMessage]);
    }
  };

  const selectedAgent = agentsData?.agents.find((a) => a.id === selectedAgentId);

  return (
    <KBPageContainer>
      <KBPageHeader
        title="AI Platform Assistant"
        description="Ask questions about KB Labs platform using autonomous agents"
      />

      {/* Agent Selector */}
      <UICard
        size="small"
        style={{ marginBottom: token.margin }}
        bodyStyle={{ padding: `${token.paddingSM}px ${token.padding}px` }}
      >
        <UIBox style={{ display: 'flex', gap: token.padding, alignItems: 'center' }}>
          <UIBox style={{ display: 'flex', alignItems: 'center', gap: token.marginXS }}>
            <Bot size={16} />
            <UIText weight="semibold">Agent:</UIText>
          </UIBox>
          <Select
            value={selectedAgentId}
            onChange={setSelectedAgentId}
            loading={agentsLoading}
            style={{ minWidth: 200 }}
            disabled={agentMutation.isPending}
          >
            {agentsData?.agents.map((agent) => (
              <Select.Option key={agent.id} value={agent.id}>
                {agent.name}
              </Select.Option>
            ))}
          </Select>
          {selectedAgent && (
            <UIText color="secondary" size="xs">
              {selectedAgent.description}
            </UIText>
          )}
        </UIBox>
      </UICard>

      {/* Quick Actions */}
      <UICard
        size="small"
        style={{ marginBottom: token.margin }}
        bodyStyle={{ padding: `${token.paddingSM}px ${token.padding}px` }}
      >
        <UIBox style={{ display: 'flex', gap: token.marginXS, flexWrap: 'wrap', alignItems: 'center' }}>
          <UIText color="secondary" style={{ marginRight: token.marginXS }}>üí° Quick questions:</UIText>
          <UITag
            color="blue"
            style={{ cursor: 'pointer' }}
            onClick={() => setInput('How do I create a workflow?')}
          >
            Create workflow
          </UITag>
          <UITag
            color="purple"
            style={{ cursor: 'pointer' }}
            onClick={() => setInput('What is Mind RAG and how does it work?')}
          >
            Mind RAG
          </UITag>
          <UITag
            color="green"
            style={{ cursor: 'pointer' }}
            onClick={() => setInput('How to use DevKit tools?')}
          >
            DevKit usage
          </UITag>
          <UITag
            color="orange"
            style={{ cursor: 'pointer' }}
            onClick={() => setInput('Show me the plugin architecture')}
          >
            Plugin architecture
          </UITag>
        </UIBox>
      </UICard>

      {/* Chat Container */}
      <UICard
        style={{
          flex: 1,
          display: 'flex',
          flexDirection: 'column',
          minHeight: 0,
        }}
        bodyStyle={{
          flex: 1,
          display: 'flex',
          flexDirection: 'column',
          padding: 0,
          minHeight: 0,
        }}
      >
        {/* Messages */}
        <UIBox
          style={{
            flex: 1,
            overflowY: 'auto',
            padding: token.paddingLG,
            display: 'flex',
            flexDirection: 'column',
            gap: token.margin,
          }}
        >
          {messages.length === 0 && (
            <UIBox style={{ textAlign: 'center', padding: `${token.paddingXL}px ${token.paddingLG}px` }}>
              <Bot size={48} style={{ color: token.colorTextSecondary, marginBottom: token.margin }} />
              <UIText color="secondary">
                Select an agent and ask a question to get started
              </UIText>
            </UIBox>
          )}

          {messages.map((msg) => (
            <MessageBubble key={msg.id} message={msg} token={token} />
          ))}

          {agentMutation.isPending && (
            <UIBox style={{ display: 'flex', gap: token.paddingSM, alignItems: 'center', padding: `${token.paddingSM}px 0` }}>
              <Spin size="small" />
              <UIText color="secondary">Agent is thinking...</UIText>
            </UIBox>
          )}
        </UIBox>

        {/* Input */}
        <UIBox
          style={{
            padding: `${token.padding}px ${token.paddingLG}px`,
            borderTop: `1px solid ${token.colorBorder}`,
          }}
        >
          <Input.Search
            value={input}
            onChange={(e) => setInput(e.target.value)}
            onSearch={handleSend}
            placeholder="Ask about KB Labs platform..."
            size="large"
            disabled={agentMutation.isPending}
            enterButton={
              <Button
                type="primary"
                icon={<Send size={16} />}
                loading={agentMutation.isPending}
              >
                Send
              </Button>
            }
          />
        </UIBox>
      </UICard>
    </KBPageContainer>
  );
}

interface MessageBubbleProps {
  message: Message;
  token: ReturnType<typeof useToken>['token'];
}

function MessageBubble({ message, token }: MessageBubbleProps) {
  const isUser = message.role === 'user';

  if (isUser) {
    return (
      <div className="user-message">
        <div className="user-message-bubble">
          <UIText className="user-message-text">
            {message.content}
          </UIText>
        </div>
      </div>
    );
  }

  // Agent message
  return (
    <div className="agent-message">
      <div className="agent-message-dot">
        <div className="agent-message-dot-circle" />
      </div>

      <div className="agent-message-content">
        <div className="agent-message-text">
          <MarkdownViewer>{message.content}</MarkdownViewer>
        </div>

        {message.stats && (
          <div className="agent-message-stats">
            <UIText color="secondary" className="agent-message-stats-text">
              {message.stats.steps} steps
            </UIText>
            <span className="agent-message-stats-dot">‚óè</span>
            <UIText color="secondary" className="agent-message-stats-text">
              {message.stats.totalTokens.toLocaleString()} tokens
            </UIText>
            <span className="agent-message-stats-dot">‚óè</span>
            <UIText color="secondary" className="agent-message-stats-text">
              {(message.stats.durationMs / 1000).toFixed(1)}s
            </UIText>
            {message.stats.toolsUsed && message.stats.toolsUsed.length > 0 && (
              <>
                <span className="agent-message-stats-dot">‚óè</span>
                <UIText color="secondary" className="agent-message-stats-text">
                  {message.stats.toolsUsed.join(', ')}
                </UIText>
              </>
            )}
          </div>
        )}

        {message.sources && message.sources.length > 0 && (
          <div className="agent-message-sources">
            <div className="agent-message-sources-header">
              <FileText size={11} color={token.colorTextTertiary} />
              <UIText className="agent-message-sources-title">
                {message.sources.length} source{message.sources.length > 1 ? 's' : ''}
              </UIText>
            </div>
            <div className="agent-message-sources-list">
              {message.sources.map((source, i) => (
                <div key={i}>
                  <UIText className="agent-message-source-file">
                    {source.file}:{source.lines[0]}-{source.lines[1]}
                  </UIText>
                  <UIText color="secondary" className="agent-message-source-snippet">
                    {source.snippet.slice(0, 100)}...
                  </UIText>
                  {i < message.sources!.length - 1 && (
                    <Divider className="agent-message-source-divider" />
                  )}
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  );
}
