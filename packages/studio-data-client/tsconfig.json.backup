{
  "extends": "@kb-labs/devkit/tsconfig/react-lib.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "node"]
  },
  "include": ["src", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.js", "src/**/*.js.map", "node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true
  }
}

